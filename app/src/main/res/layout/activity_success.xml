<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/subguion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="_"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Has ingresado como:"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/receptor"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="null"
                    android:visibility="visible" />


                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgPrev"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_remove" />

                </FrameLayout>

                <EditText
                    android:id="@+id/descImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:hint="Introduce un nombre"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCam"
                        android:textStyle="bold"
                        style="@style/buttonStyle"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_weight="3"
                        android:text="Cámara" />

                    <Button
                        android:id="@+id/btnGal"
                        android:textStyle="bold"
                        style="@style/buttonStyle"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:text="Galería" />

                    <Button
                        android:id="@+id/btnSubir"
                        android:textStyle="bold"
                        style="@style/buttonStyle"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="3"
                        android:text="Subir >>"
                        android:visibility="gone" />



                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>